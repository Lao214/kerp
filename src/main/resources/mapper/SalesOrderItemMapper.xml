<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kerp.modules.psi.mapper.SalesOrderItemMapper">

    <!-- 多表关联查询 SQL -->
    <select id="listWithProductInfo" resultType="com.example.kerp.modules.psi.entity.SalesOrderItem">
        SELECT
            soi.*,
            bp.product_name,
            bp.product_code,
            bp.unit
        FROM
            psi_sales_order_item soi
        LEFT JOIN
            base_product bp ON soi.product_id = bp.id
        WHERE
            soi.order_id = #{orderId}
    </select>

</mapper>