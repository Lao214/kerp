<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kerp.modules.system.mapper.SysRoleMapper">

    <select id="selectMainRoleByUserId" resultType="com.example.kerp.modules.system.entity.SysRole">
        SELECT
            r.*
        FROM
            sys_role r
        JOIN
            sys_user_role ur ON r.id = ur.role_id
        WHERE
            ur.user_id = #{id}
        ORDER BY
            r.data_scope DESC
        Limit
            1
    </select>

    <select id="getRoleCodesByUserId" resultType="java.lang.String">
        SELECT
            r.role_code
        FROM
            sys_role r
        INNER
            JOIN sys_user_role ur ON r.id = ur.role_id
        WHERE
            ur.user_id = #{userId}
    </select>

</mapper>