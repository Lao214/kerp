<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kerp.modules.psi.mapper.PsiSalesReturnMapper">

    <!-- 多表关联查询 SQL -->
    <select id="selectReturnPage" resultType="com.example.kerp.modules.psi.vo.ReturnVO">
        SELECT
            psr.*
        FROM
            psi_sales_return psr
        <where>
            <!-- 逻辑删除过滤 -->
            <!-- 如果你的主表没有 is_deleted 可以不写，但仓库和商品如果有，建议关联时过滤 -->
            is_deleted = 0
            <!-- 动态查询条件 -->
            <if test="returnId != null">
                AND psr.id = #{returnId}
            </if>
        </where>
        ORDER BY psr.return_date DESC
    </select>

</mapper>